<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.quiz.lesson06.dao.BookingDAO">
	<select id="selectBookingList" resultType="com.quiz.lesson06.model.Booking">
		SELECT
			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`booking`
	</select>
	
	<insert id="insertBooking" parameterType="com.quiz.lesson06.model.Booking">
		INSERT INTO `booking`
		(
			`name`
			, `headcount`
			, `day`
			, `date` 
			, `phoneNumber`
			, `state`
		)
		VALUES
		(
			#{name}
			, #{headcount}
			, #{day}
			, #{date}
			, #{phoneNumber}
			, '대기중'
		)
	</insert>
	
	<delete id="deleteBookingById" parameterType="int">
		DELETE
		FROM `booking`
		WHERE
			`id` = #{id}
	</delete>
	
	<select id="selectBookingByNameAndPhone" parameterType="map" resultType="com.quiz.lesson06.model.Booking">
		SELECT
			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`booking`
		WHERE
			`name` = #{name}
			AND
			`phoneNumber` = #{phone}
			
	
	</select>
</mapper>